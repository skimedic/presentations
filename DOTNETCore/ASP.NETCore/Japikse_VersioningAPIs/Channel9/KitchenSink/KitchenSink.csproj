<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>disable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<PackageId>$(AssemblyName)</PackageId>
		<RootNamespace>$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Asp.Versioning.Mvc" Version="[8.0.*,9.0)" />
		<PackageReference Include="Asp.Versioning.Mvc.ApiExplorer" Version="[8.0.*,9.0)" />
		<PackageReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Design" Version="[8.0.*,9.0)" />
		<PackageReference Include="Swashbuckle.AspNetCore" Version="[6.*,7.0)" />
		<PackageReference Include="Swashbuckle.AspNetCore.Annotations" Version="[6.*,7.0)" />
		<PackageReference Include="Swashbuckle.AspNetCore.Swagger" Version="[6.*,7.0)" />
		<PackageReference Include="Swashbuckle.AspNetCore.SwaggerGen" Version="[6.*,7.0)" />
		<PackageReference Include="Swashbuckle.AspNetCore.SwaggerUI" Version="[6.*,7.0)" />
		<PackageReference Include="System.Text.Json" Version="[8.0.*,9.0)" />
	</ItemGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DocumentationFile>KitchenSink.xml</DocumentationFile>
		<NoWarn>1701;1702;1591;1573</NoWarn>
	</PropertyGroup>
	<ItemGroup>
		<None Update="KitchenSink.xml">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>